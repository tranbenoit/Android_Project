<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:background="#AAA"
        android:id="@+id/imageAnime"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <net.controllerListview.AutoResizeTextView
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anime name"
        android:id="@+id/nomAnime"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/nbEpisode"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/imageAnime"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode : -/-"
        android:id="@+id/nbEpisode"
        android:layout_alignBottom="@+id/imageAnime"
        android:layout_toEndOf="@+id/imageAnime"
        android:layout_toRightOf="@+id/imageAnime" />

    <TextView
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : -/10"
        android:id="@+id/scoreUser"
        android:layout_alignTop="@+id/nbEpisode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/userStatus"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="10dp"
        android:textIsSelectable="true"
        android:layout_marginLeft="180dp"
        android:layout_marginStart="180dp"
        android:layout_alignBottom="@+id/nbEpisode" />

</RelativeLayout>
